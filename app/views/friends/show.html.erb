<div class="card p-4">
  <%= render @friend %>
</div>

<div class="mt-4 d-flex justify-content-between">
  <a href="<%= edit_friend_path(@friend) %>" class="btn btn-primary">Edit this friend</a>
  <a href="<%= friends_path %>" class="btn btn-secondary">Back to friends</a>

  <%= button_to "Delete this friend", @friend, method: :delete, class: "btn btn-danger" %>
</div>
